<p id="notice"><%= notice %></p>

<h1>Items</h1>

  <p>
    <% @items.each do |item| %>

      <%= image_tag(item.image_url.to_s, width: 300) %>
      Colour: <%= item.colour %>
      <%= link_to 'Show', item %>
      <%= link_to 'Edit', edit_item_path(item) %>
      <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %>
      <br>
    <% end %>
  </p>


<br>

<%= link_to 'New Item', new_item_path %>
