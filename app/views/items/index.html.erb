<p id="notice"><%= notice %></p>



<h1>Items</h1>


<form action="/clothes_selection" method="get">

  <h2>Tops</h2>
  <% @tops.each do |item| %>
    <%= image_tag(item.image_url.to_s, width: 300) %> <br>
    Colour: <%= item.colour %>
     <input type="checkbox" name="item-<%=item.id%>" value=<%=item.id%> id=<%=item.id%> > <br>
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
  <% end %>

  <h2>Bottoms</h2>
  <% @bottoms.each do |item| %>
    <%= image_tag(item.image_url.to_s, width: 300) %><br>
    Colour: <%= item.colour %>
     <input type="checkbox" name="item-<%=item.id%>" value=<%=item.id%> id=<%=item.id%> > <br>
    <%= link_to 'Show', item %>
    <%= link_to 'Edit', edit_item_path(item) %>
    <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' } %><br><br>
  <% end %>
  <input type="submit" value="Submit">
</form>


