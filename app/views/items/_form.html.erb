<%= form_with(model: item, local: true) do |form| %>
  <% if item.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(item.errors.count, "error") %> prohibited this item from being saved:</h2>

      <ul>
      <% item.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :colour %>
    <%= form.select(:colour, Colour::SELECTION) %>
  </div>

  <div class="field">
    <%= form.label :type %>
    <%= form.select :clothes_type, [['top'], ['bottom']]  %>
  </div>

  <div class="field">
    <%= form.label :clothes_occasion %>
    <%= form.select :clothes_occasion, [['formal'], ['informal']] %>
  </div>

  <div class="field">

    <%= form.file_field :image %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
